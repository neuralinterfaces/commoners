{
    "compilerOptions": {
      "rootDir": ".",
      "declaration": true,
      "lib": [
        "esnext", 
        "dom"
      ],
      "strict": false,
      "target": "es2021",
      "module": "node16",
      "moduleResolution": "node16",
      "sourceMap": true,
      "declarationMap": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "index.ts",
      "services/index.ts",
      "config.ts",
      "*.d.ts"
    ],
}